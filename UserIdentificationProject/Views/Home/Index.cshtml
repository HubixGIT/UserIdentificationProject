@model UserIdentificationProject.Models.SaveDataModel

@{
    ViewData["Title"] = "Home Page";
}

<html>
<body>

    <form>
        <div class="form-group">
            <label>Login</label>
            <input id="Login" type="text" class="form-control" placeholder="ExampleLogin">
        </div>
        <div class="form-group">
            <label for="TextArea">Write some text 150 character limit</label>
            <textarea class="form-control" id="TextArea" rows="3" maxlength="150" onkeyup="countChar(this)" placeholder="Type Here"></textarea>
            <div class="numbersofChar">150</div>
        </div>
        <div class="form-group">
            <button id="Submit" type="button" class="btn btn-success float-right" onclick="showArray()">Submit</button>
        </div>
    </form>

    <script src="~/js/TextFunctions.js"></script>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />

</body>
</html>